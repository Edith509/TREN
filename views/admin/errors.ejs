<% layout("/admin/layout.ejs") %>

<section class="grid gap-6 animate-[fadeSlide_0.45s_ease]">
  <section class="rounded-2xl border border-slate-200 bg-white p-6">
    <h3 class="text-base font-semibold text-slate-900">Ошибки</h3>
    <p class="mt-2 text-sm text-slate-500">
      Последние ошибки приложения. Храним до 500 записей, показываем 100 последних.
    </p>
  </section>

  <section class="rounded-2xl border border-slate-200 bg-white p-6">
    <div class="grid gap-4" id="errorsList">
      <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-5 text-center text-sm text-slate-500">
        Загружаем ошибки...
      </div>
    </div>
  </section>
</section>

<script>
  const adminId = document.body.dataset.adminId;
  const initData = window.Telegram?.WebApp?.initData || "";
  const initHeaders = initData ? { "x-telegram-init-data": initData } : {};
  const query = adminId ? `?adminTelegramId=${adminId}` : "";
  const listEl = document.getElementById("errorsList");

  function formatDate(value) {
    if (!value) return "";
    const date = new Date(value);
    return date.toLocaleString("ru-RU", {
      day: "2-digit",
      month: "short",
      year: "numeric",
      hour: "2-digit",
      minute: "2-digit",
    });
  }

  function renderError(item) {
    return `
      <div class="rounded-xl border border-slate-200 bg-white px-4 py-4">
        <div class="flex flex-wrap items-center justify-between gap-2 text-xs text-slate-500">
          <span>${formatDate(item.createdAt)}</span>
          <span class="rounded-full bg-slate-100 px-2 py-1 text-[11px] font-semibold text-slate-600">${item.source || "app"}</span>
        </div>
        <div class="mt-2 text-sm font-semibold text-slate-900">${item.message || "Ошибка"}</div>
        <div class="mt-1 text-xs text-slate-500">
          ${item.method ? `${item.method}` : ""}${item.path ? ` ${item.path}` : ""}
        </div>
        ${item.stack ? `<pre class="mt-3 overflow-x-auto whitespace-pre-wrap rounded-lg bg-slate-50 p-3 text-[11px] text-slate-600">${item.stack}</pre>` : ""}
      </div>
    `;
  }

  async function loadErrors() {
    const res = await fetch(`/api/admin/errors${query}`, { headers: initHeaders });
    if (!res.ok) {
      listEl.innerHTML = `
        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-5 text-center text-sm text-slate-500">
          Не удалось загрузить ошибки.
        </div>
      `;
      return;
    }
    const data = await res.json();
    const items = data.items || [];
    if (!items.length) {
      listEl.innerHTML = `
        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-5 text-center text-sm text-slate-500">
          Ошибок нет.
        </div>
      `;
      return;
    }
    listEl.innerHTML = items.map(renderError).join("");
  }

  loadErrors();
</script>
