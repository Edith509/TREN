<% layout("/admin/layout.ejs") %>

<section class="grid gap-6 animate-[fadeSlide_0.45s_ease]">
  <section class="rounded-2xl border border-slate-200 bg-white p-6">
    <h3 class="text-base font-semibold text-slate-900">Пользователи</h3>
    <p class="mt-2 text-sm text-slate-500">Список пользователей и их статус тренировок.</p>
  </section>

  <section class="rounded-2xl border border-slate-200 bg-white p-6">
    <div id="userTable">
      <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-5 text-center text-sm text-slate-500">
        Загружаем пользователей...
      </div>
    </div>
  </section>
</section>

<script>
  const adminId = document.body.dataset.adminId;
  const initData = window.Telegram?.WebApp?.initData || "";
  const initHeaders = initData ? { "x-telegram-init-data": initData } : {};
  const query = adminId ? `?adminTelegramId=${adminId}` : "";
  const userTable = document.getElementById("userTable");

  const statusLabels = {
    none: "Не запрошено",
    requested: "Запрошено",
    active: "Активна",
    completed: "Завершено",
    declined: "Отказано",
  };

  const statusClasses = {
    none: "border border-slate-200 bg-slate-50 text-slate-500",
    requested: "border border-blue-200 bg-blue-50 text-blue-700",
    active: "border border-emerald-200 bg-emerald-50 text-emerald-700",
    completed: "border border-indigo-200 bg-indigo-50 text-indigo-700",
    declined: "border border-rose-200 bg-rose-50 text-rose-600",
  };

  function renderAvatarImage(photoUrl, telegramId, initials, altText) {
    const fallbackSrc = telegramId ? `/api/telegram/avatar/${telegramId}` : "";
    const src = photoUrl || fallbackSrc;
    if (!src) return initials;
    const fallbackAttr = fallbackSrc && src !== fallbackSrc ? ` data-fallback="${fallbackSrc}"` : "";
    const onError = "if (this.dataset.fallback){this.src=this.dataset.fallback;this.removeAttribute('data-fallback');}else{this.remove();}";
    const img = `<img class="absolute inset-0 h-full w-full object-cover" src="${src}" alt="${altText}" onerror="${onError}"${fallbackAttr} />`;
    return `${initials}${img}`;
  }

  async function loadUsers() {
    const res = await fetch(`/api/admin/users${query}`, { headers: initHeaders });
    if (!res.ok) {
      userTable.innerHTML = `
        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-5 text-center text-sm text-slate-500">
          Не удалось загрузить пользователей.
        </div>
      `;
      return;
    }
    const data = await res.json();
    const items = data.items || [];
    if (!items.length) {
      userTable.innerHTML = `
        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-5 text-center text-sm text-slate-500">
          Пока нет пользователей.
        </div>
      `;
      return;
    }

    const rows = items
      .map((user) => {
        const initials = `${user.firstName?.[0] || ""}${user.lastName?.[0] || ""}`.trim() || "?";
        const statusClass = statusClasses[user.status] || statusClasses.none;
        const statusLabel = user.status ? statusLabels[user.status] : "-";
        return `
          <div class="grid gap-3 border-b border-slate-100 py-3 md:grid-cols-[1.3fr_0.8fr_0.8fr_1fr] md:items-center">
            <div class="flex items-center gap-3">
              <div class="relative flex h-11 w-11 items-center justify-center overflow-hidden rounded-xl bg-slate-100 text-sm font-semibold text-slate-500">
                ${renderAvatarImage(user.photoUrl, user.telegramId, initials, "Фото")}
              </div>
              <div>
                <div class="text-sm font-semibold text-slate-900">${user.firstName || "Пользователь"} ${user.lastName || ""}</div>
                <div class="text-xs text-slate-500">@${user.username || "username не задан"}</div>
              </div>
            </div>
            <div class="text-sm text-slate-600">tg:${user.telegramId}</div>
            <div class="text-sm text-slate-600">${user.isAdmin ? "Админ" : "Пользователь"}</div>
            <div>
              ${
                user.status
                  ? `<span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold ${statusClass}">
                      ${statusLabel}
                    </span>`
                  : `<span class="text-xs font-semibold text-slate-400">-</span>`
              }
            </div>
          </div>
        `;
      })
      .join("");

    userTable.innerHTML = `
      <div class="mb-2 hidden grid-cols-[1.3fr_0.8fr_0.8fr_1fr] gap-3 text-xs font-semibold uppercase tracking-wide text-slate-400 md:grid">
        <div>Пользователь</div>
        <div>Telegram ID</div>
        <div>Роль</div>
        <div>Статус тренировки</div>
      </div>
      ${rows}
    `;
  }

  loadUsers();
</script>
